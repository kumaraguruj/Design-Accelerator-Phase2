@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logoff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right dropdown">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle; " data-toggle="dropdown" style="padding-bottom:5px">@User.Identity.Name@*<span class="caret" style="color:ghostwhite"></span>*@
                    <span class="glyphicon glyphicon-chevron-down" id="glyphiconHide"></span></a>
                <ul class="dropdown-menu" role="menu" style="padding:2px; text-align:center">
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(" ", "Index", "Login", null, new { id = "loginLink" })</li>
    </ul>
}
