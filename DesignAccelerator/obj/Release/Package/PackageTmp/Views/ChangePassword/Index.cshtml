                //}
            })

        })
    </script>

    @if (ViewBag.Message != null)
        {
        <script>
                alert('@ViewBag.Message');
                $("#userName").val("");
                $('#oldPassword').val("");
                $('#newPassword').val("");
                $('#confirmPassword').val("");
        </script>
    }
}