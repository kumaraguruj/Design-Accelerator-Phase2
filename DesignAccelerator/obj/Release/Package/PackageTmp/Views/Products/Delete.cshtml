@model DesignAccelerator.Models.ViewModel.ProductsViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .button {
        background-color: #af2024;
        color: #ffffff;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h2>Delete Product</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductID)
        @Html.HiddenFor(model => model.daid)

        <div class="form-group">
            @Html.LabelFor(model => model.lstLOB, "Line Of Business", new { @class = "control-label col-md-2", @style = "text-align:left" })
            <div class="col-md-10">
                <span class="form-inline">
                    @Html.EditorFor(model => model.LobDesc, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.LobDesc, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BuzProdDesc, "Business Product", new { @class = "control-label col-md-2", @style = "text-align:left" })
            <div class="col-md-10">
                <span class="form-inline">
                    @Html.EditorFor(model => model.BuzProdDesc, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.BuzProdDesc, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ReqReference, "Requirement Reference", new { @class = "control-label col-md-2", @style = "text-align:left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReqReference, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.ReqReference, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default; button" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back", "Index")
</div>
