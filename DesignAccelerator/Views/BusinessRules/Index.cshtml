            });
            html = html +  "        <th>     Business Rule Description*</th>";
            for ( var i = 1; i <= 10; i++ ) {
                html = html +  "        <th> Attribute" + i + "</th>";
                html = html +  "        <th> Value" + i + "</th>";
            }
            html = html +  "        <th> Remarks</th>";
            html = html +  "        <th> Delete</th>";
            html = html +  "        <th class='hide'>id</th> </tr>" +
                           "</thead>";

            var tableHead = $(html);
            table.append(tableHead);

            var tbody = $("<tbody/>");
            if (model.lstbusinessrules.length > 0)
            {
                var buzruleslst = [];
                $.each(model.lstbusinessrules, function(index, value) {
                    if ($.inArray(value.BuzRuleAttrMapID, buzruleslst)==-1) {
                        buzruleslst.push((value.BuzRuleAttrMapID)); // pushing no of rows add
                    }
                });

                var transseq = [];
                $.each(buzruleslst,function(index,val1){
                    $.each(model.lstbusinessrules, function(index, val2) {
                        if (val2.BuzRuleAttrMapID==val1){
                            transseq.push((val2.TransactionSeq));   //pushing transaction sequence to array
                        }
                    });
                    currow=  $(model.lstbusinessrules).filter(function (i,n){return n.BuzRuleAttrMapID == val1});
                    var row = LoadRow(currow,transseq,model);
                    tbody.append(row);
                    transseq.length = 0;
                });

                table.append(tbody);
                return $('#divBR').append(table);
            }
            else
            {
                var row = AddRow(model);
                tbody.append(row);
                table.append(tbody);
                return $('#divBR').append(table);
            }
        }

