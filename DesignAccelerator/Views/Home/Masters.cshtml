@model DesignAccelerator.Models.ViewModel.DAViewModel

@{
    ViewBag.Title = "Masters";
}

<div class="navbar-static-top">
    <ul class="breadcrumb"></ul>
</div>

<h2>Masters Home</h2>
<hr />

<div class="jumbotron">
    <form>
        @Html.HiddenFor(m => m.DAID)
        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="">Attribute</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="">Attribute Values</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "BusinessProducts", new {id = Model.DAID })">Business Products</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "Destination", new {id = Model.DAID })">Destination</a></p>                
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "DistributionType", new {id = Model.DAID })">Distribution Type</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "FrequencyType", new {id = Model.DAID })">Frequency</a></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "LifeCycles", new {id = Model.DAID })">Lifecycle</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "LOB", new {id = Model.DAID })">LOB</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "ModeType", new {id = Model.DAID })">Mode</a></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="">Module</a></p>
            </div>
            <div class="col-md-4">
                <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "Source", new {id = Model.DAID })">Source</a></p>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Client")"><span>' + "@Model.ClientName" + '</span></a></li>');
            $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Project", new {id = Model.ClientId })"><span>' + "@Model.ProjectName" + '</span></a></li>');
            $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Application", new {id = Model.ProjectId })"><span>' + "@Model.ApplicationName" + '</span></a></li>');
            $('.breadcrumb').append('<li><a href="@Url.Action("Index", "DesignAccelerator", new {id = Model.ApplicationID })"><span>' + "@Model.DAName" + '</span></a></li>');
            $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Home", new {id = Model.DAID })"><span>' + "DA Home" + '</span></a></li>');
        });

    </script>
}

