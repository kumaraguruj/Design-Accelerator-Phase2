@using DesignAccelerator.Models.ViewModel;
@model TransactionsViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .button {
        background-color: #af2024;
        color: #ffffff;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Delete Transaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TransactionSeq)
        @Html.HiddenFor(model => model.daId)

        <div class="form-group">
            @Html.LabelFor(model => model.HighLevelTxnID, "High Level Transaction ID", new { @class = "control-label col-md-3", @style = "text-align:left" })
            <div class="col-md-9">
                <span class="form-inline" style="margin-left:-70px">
                    @Html.EditorFor(model => model.HighLevelTxnID, new { htmlAttributes = new { @class = "form-control", @readonly="true" } })
                    @Html.ValidationMessageFor(model => model.HighLevelTxnID, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HighLevelTxnDesc, "High Level Transaction", new { @class = "control-label col-md-3", @style = "text-align:left" })
            <div class="col-md-9">
                <span class="form-inline" style="margin-left:-70px">
                    @Html.EditorFor(model => model.HighLevelTxnDesc, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.HighLevelTxnDesc, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LifeCycleDesc, "Life Cycle", htmlAttributes: new { @class = "control-label col-md-3", @style = "text-align:left" })
            <div class="col-md-9">
                <span class="form-inline" style="margin-left:-70px">
                    @Html.EditorFor(model => model.LifeCycleDesc, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.LifeCycleDesc, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ReqReference, "Requirement Reference", htmlAttributes: new { @class = "control-label col-md-3", @style = "text-align:left" })
            <div class="col-md-9">
                <span class="form-inline" style="margin-left:-70px">
                    @Html.EditorFor(model => model.ReqReference, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.ReqReference, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9" style="margin-left:222px">
                <input type="submit" value="Delete" class="btn btn-default; button" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
