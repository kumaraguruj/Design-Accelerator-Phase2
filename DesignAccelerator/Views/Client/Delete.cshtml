@model DesignAccelerator.Models.ViewModel.ClientViewModel

<style>
    .button {
        background-color: #af2024;
        color: #ffffff;
    }
</style>
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Delete Client</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClientID)
        
        <div class="form-group">
            @Html.Label("Client Name", htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:left" })
            <div class="col-md-10">
                <span class="form-inline" style="margin-left:-100px">
                    @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
                </span>
            </div>
        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-left:95px">
                    <input type="submit" value="Delete" name="action:Delete" class="btn btn-default; button" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
