@model DesignAccelerator.Models.ViewModel.InterfaceViewModel

@{
    ViewBag.Title = "DF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .no-js #loader {
        display: none;
    }

    .js #loader {
        display: block;
        position: absolute;
        left: 100px;
        top: 0;
    }

    .se-pre-con {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: url('/DesignAccelerator/Content/Images/pageLoad.gif') center no-repeat rgb(249,249,249);
        opacity: .8;
    }
</style>
<div class="navbar-static-top">
    <ul class="breadcrumb"></ul>
</div>

<h2> Distribution Frequency - Input</h2>
<br />
<hr style="width:65%;" />
<div class="row">
    <div class="col-md-8">
        <section id="DFInputForm">
            @using (Html.BeginForm("Index", "DF", FormMethod.Post, new { @class = "form-Horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                //@Html.ValidationSummary(true, "DF creation was unsuccessful. Please enter correctly and try again", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.daId)
                <div>
                    <br />
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <div class="col-md-14">
                            <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "DistributionType")">Add Distribution</a></p>
                            <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "FrequencyType")">Add Frequency</a></p>
                            <p><a class="btn btn-primary btn-block" href="@Url.Action("Index", "ChannelsAndAlerts")">Channels & Alerts Mapping</a></p>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            }
        </section>
    </div>
</div>
<div class="se-pre-con"></div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".se-pre-con").fadeOut("slow");

        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Client")"><span>' + "@Model.ClientName" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Project", new {id = Model.ClientID })"><span>' + "@Model.ProjectName" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Application", new {id = Model.ProjectID})"><span>' + "@Model.ApplicationName" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Module", new {id = Model.ApplicationID})"><span>' + "@Model.ModuleName" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "DesignAccelerator", new {id = Model.ModuleId})"><span>' + "@Model.daName" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Products", new {id = Model.daId })"><span>' + "Products" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Transactions", new {id = Model.daId })"><span>' + "Transactions" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "AttributeList", new {id = Model.daId })"><span>' + "Attribute" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "TransactionsAttribute", new { id = Model.daId })"><span>' + "TransactionsAttribute" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "BusinessRules", new { id = Model.daId })"><span>' + "BusinessRules" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "SMD", new { id = Model.daId })"><span>' + "SMD" + '</span></a></li>');
        $('.breadcrumb').append('<li><a href="@Url.Action("Index", "Interface", new { id = Model.daId })"><span>' + "Interface" + '</span></a></li>');

});
    </script>
}

